{
  "ignoreFiles": [
    "/build/",
    "/dist/",
    "/node_modules/",
    "/public/",
    "/src/mocks/",
    "**/*.(js|jsx|ts|tsx)"
  ],
  "extends": "stylelint-config-sass-guidelines",
  "rules": {
    "max-empty-lines": 1,
    "max-nesting-depth": null,
    "selector-no-qualifying-type": null,
    "selector-max-compound-selectors": 10,
    "selector-max-id": 1,
    "string-quotes": "double",
    "scss/at-import-partial-extension-blacklist": "off"
  }
}
